<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="단어"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/fgword1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" [ "
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#FF696969"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="발음"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#FF696969"
            android:id="@+id/fgword1_pro"/>
        <TextView
            android:id="@+id/pro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" ] "
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#FF696969"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/word_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mean_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1. "
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FF9370DB"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="문법"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FF9370DB"
            android:id="@+id/fgword1_gram"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="단어의 뜻"
            android:textSize="25dp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:id="@+id/fgword1_mean"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="시작하기"
        android:textSize="25dp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_roundcorner_button"
        android:id="@+id/test_start"/>

    <com.like.LikeButton
    android:id="@+id/like_check"
    app:icon_type="Star"
    app:icon_size="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_gravity="center"
    app:liked="false"
    app:like_drawable="@drawable/star_on"
    app:unlike_drawable="@drawable/star_off"
    app:dots_primary_color="@color/colorAccent"
    app:dots_secondary_color="@color/colorPrimary"
    app:circle_end_color="@color/colorAccent"
    app:circle_start_color="@color/colorPrimary"
    app:anim_scale_factor="5" />

</LinearLayout>
