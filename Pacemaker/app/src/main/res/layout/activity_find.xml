<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context=".FindActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="160dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/university"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/custom_btn"
                        android:text="ID 찾기"
                        android:textSize="20dp"
                        android:textColor="#FFFFFFFF"
                        android:textStyle="bold"
                        android:id="@+id/find_ID_Btn"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/custom_btn2"
                            android:text="PW 찾기"
                            android:textSize="20dp"
                            android:textColor="#FF000000"
                            android:textStyle="bold"
                            android:id="@+id/find_PW_Btn"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="25dp"
                    android:background="@drawable/word_frame">
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:hint="ID"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/find_id_txt"
                        android:visibility="gone"/>
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="Name"
                        android:paddingLeft="10dp"
                        android:id="@+id/find_nameText"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:hint="E-mail"
                                android:id="@+id/find_mailText"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" \@ "
                                android:textSize="25dp"
                                android:textStyle="bold"/>
                            <Spinner
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/find_mailList"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/dday_counter"
                            android:text="조회하기"
                            android:textSize="20dp"
                            android:textColor="#FF000000"
                            android:textStyle="bold"
                            android:id="@+id/findfindBtn"/>
                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/idList"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>